<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyle" parent="Base.TextAppearance.AppCompat" />

    <!--Regular-->
    <style name="TextStyle.Regular">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextStyle.Regular.12sp">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="TextStyle.Regular.16sp">
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="TextStyle.Regular.20sp">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <!--Medium-->
    <style name="TextStyle.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextStyle.Medium.12sp">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="TextStyle.Medium.16sp">
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="TextStyle.Medium.20sp">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

</resources>